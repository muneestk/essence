<%- include('../userlayout/header.ejs') %>
<!doctype html>
<html lang="en">
  <head>
  	<title>Sign up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>
  <body class="img js-fullheight" style="background-image: url(/adminAssets/images/carousel/banner_1.jpg);">
    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 text-center mb-5">
            <h2 class="heading-section">Sign up</h2>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-6 col-lg-4 text-light">
            <div class="login-wrap p-0">
              <h3 class="mb-4 text-center">Create an account?</h3>
              <form action="/register" method="post" class="signin-form">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Your name" name="name" required>
                </div>
                <div class="form-group">
                  <input type="email" class="form-control" placeholder="Your email" name="email" required>
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Your mobile" name="mno" required>
                </div>
                <div class="form-group">
                  <input id="password-field" type="password" class="form-control" placeholder="Password" name="password" required>
                  <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                  <button type="submit" class="form-control btn btn-primary px-3">SUBMIT</button>
                </div>
              </form>
              <div class="form-group d-md-flex">
                <div class="text-md-center">
                  <h6><a href="/login" style="color: #fff;">Already have an account? <span class="text-primary">Sign In</span> </a></h6>
                </div>
              </div>
              <% if (typeof message !== 'undefined') { %>
                <div class="alert alert-success" role="alert">
                  <%= message %>
                </div>
              <% } %>
              
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
